<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
	<persistence-unit name="Set_Job_Portal" transaction-type="RESOURCE_LOCAL">
		<class>javax.persistence.Persistence</class>
		<class>com.set_job_portal.Entity.User</class>
		<class>com.set_job_portal.Entity.JobSeeker</class>
		<class>com.set_job_portal.Entity.Recruiter</class>
		<class>com.set_job_portal.Entity.JobPost</class>
		<class>com.set_job_portal.Entity.Application</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/job_portal"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
